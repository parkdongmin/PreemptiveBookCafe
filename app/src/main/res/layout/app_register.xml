<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppRegister">

    <ImageView
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/topbackimage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/topBackSpace"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/backspace"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topBackText" />

    <TextView
        android:id="@+id/topBackText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        android:fontFamily="@font/roboto_bold_italic"
        android:text="Preemptive Book Cafe"
        android:textColor="#C0751E"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:text="회원가입을 진행해주세요."
        android:layout_marginTop="110dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <EditText
        android:id="@+id/registerNumTextBox"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:background="@drawable/group02"
        android:fontFamily="@font/roboto_medium"
        android:hint="학번을 입력하세요."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/hint"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/registerPwTextBox"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/group02"
        android:fontFamily="@font/roboto_medium"
        android:hint="패스워드를 입력하세요."
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerNumTextBox" />

    <EditText
        android:id="@+id/registerEmailTextBox"
        android:layout_width="276dp"
        android:layout_height="52dp"
        android:background="@drawable/group02"
        android:fontFamily="@font/roboto_medium"
        android:hint="이메일을 입력하세요."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginTop="15dp"
        android:textColorHint="@color/hint"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerPwTextBox" />

    <CheckBox
        android:id="@+id/checkBoxR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 보이기"
        android:textColor="@color/hint"
        android:textSize="11dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerEmailTextBox" />

    <ImageView
        android:id="@+id/joinExBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/group8"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxR" />

</androidx.constraintlayout.widget.ConstraintLayout>